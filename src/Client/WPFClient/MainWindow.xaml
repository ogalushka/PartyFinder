<Window x:Class="WPFClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFClient" 
        xmlns:views="clr-namespace:WPFClient.Views" 
        xmlns:vms="clr-namespace:WPFClient.ViewModel"
        xmlns:gcvm="clr-namespace:WPFClient.GameCatalog.ViewModel"
        xmlns:gcv="clr-namespace:WPFClient.GameCatalog.Views"
        d:DataContext="{d:DesignInstance Type=local:AppViewModel}"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <!-- TODO there has to be a better way than adding all views here manually -->

    <Grid>
        <ContentControl Content="{Binding CurrentViewModel}" />
    </Grid>
</Window>
